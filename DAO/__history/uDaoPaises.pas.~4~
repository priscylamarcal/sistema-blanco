unit uDaoPaises;

interface

uses uDAO, System.SysUtils;

type daoPaises = class( DAO )
  private
  protected
  public
    constructor crieObj;                              override;
    function getDS : TObject;                         override;
    function pesquisar ( pChave : string ) : string;  override;
    function salvar ( pObj : TObject ) : string;      override;
    function excluir ( pObj : TObject ) : string;     override;
    function carregar ( pObj : TObject ) : string;    override;
end;

implementation

{ daoPaises }



{ daoPaises }

function daoPaises.carregar(pObj: TObject): string;
begin

end;

constructor daoPaises.crieObj;
begin
  inherited;

end;

function daoPaises.excluir(pObj: TObject): string;
begin

end;

function daoPaises.getDS: TObject;
begin
  Result:= aDM.DSPaises;
end;

function daoPaises.pesquisar(pChave: string): string;
var mSql : string;
begin
  if pChave <> '' then
     mSql:= 'select * from paises where pais = ' +quotedstr(pChave)+  'order by codpais'
  else
     mSql:= 'select * from paises order by codpais';

  aDM.QPaises.Active:= False;
  aDM.QPaises.SQL.Text:= mSql;
  aDM.QPaises.Open;
end;

function daoPaises.salvar(pObj: TObject): string;
begin

end;

end.
